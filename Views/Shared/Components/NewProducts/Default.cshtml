@model IList<ProductModel>
@using SPS.UI.Data.Models.Product
@using SPS.UI.Data.Models.ProductImage
@using System.Linq
@{

}
@if(Model !=null)
{
    @foreach (var item in Model)
{
    <div class="col-xl-3 col-md-6 col-lg-4 col-sm-6">
        <div class="product-wrap mb-25">
            <div class="product-img">
                <a asp-controller="Product" asp-action="ProductDetail" asp-route-id=@item.Id>
                    <img class="default-img" src="@item.Image" alt="">
                    <img class="hover-img" src="@item.Image" alt="">
                </a>
                <span class="pink">New</span>
                <div class="product-action">
                    <div class="pro-same-action pro-wishlist">
                        <a title="Wishlist" href="wishlist.html"><i class="pe-7s-like"></i></a>
                    </div>
                    <div class="pro-same-action pro-cart">
                        <a title="Add To Cart" class="btnAddShoppingCart" data-id="@item.Id" data-quantity="1"><i class="pe-7s-cart"></i> Add to cart</a>
                    </div>
                    <div class="pro-same-action pro-quickview">
                        <a title="Quick View" href="#" data-toggle="modal" data-target="#exampleModal"><i class="pe-7s-look"></i></a>
                    </div>
                </div>
            </div>
            <div class="product-content text-center">
                <h3><a a asp-controller="Product" asp-action="ProductDetail" asp-route-id=@item.Id>@item.ProductName</a></h3>
                <div class="product-rating">
                    <i class="fa fa-star-o yellow"></i>
                    <i class="fa fa-star-o yellow"></i>
                    <i class="fa fa-star-o yellow"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <div class="product-price">
                    <span>@String.Format("{0:#,##0}",item.Price)</span>
                    <span class="old">@String.Format("{0:#,##0}",item.OriginalPrice)</span>
                </div>
            </div>
        </div>
    </div>

    }

}
else
{
    <h1>No New Product</h1>
}

